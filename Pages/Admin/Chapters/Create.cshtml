@page
@model AlgoApp.Pages.Admin.Chapters.CreateModel
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Chapter.Id" class="form-control" type="hidden" />
    <div class="form-group row">
        <label asp-for="Chapter.Name" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Chapter.Name" class="form-control" readonly />
            <span asp-validation-for="Chapter.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Chapter.Order" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Chapter.Order" class="form-control" />
            <span asp-validation-for="Chapter.Order" class="text-danger"></span>
        </div>
    </div>
    <a asp-page="./Index" class="btn btn-primary">返回</a>
    <input type="submit" class="btn btn-primary" value="保存">
</form>
