@page
@model AlgoApp.Pages.Admin.Chapters.IndexModel
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary float-right" asp-page="./Create">新增</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">章节名称</th>
            <th scope="col">顺序</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chapter in Model.Chapters)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => chapter.Id)
                </td>
                <td class="align-middle">
                    <a asp-page="../Questions/Index" asp-route-chapterid="@chapter.Id">
                        @Html.DisplayFor(modelItem => chapter.Name)
                    </a>
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => chapter.Order)
                </td>
                <td class="align-middle"><a class="btn btn-primary" asp-page="Edit" asp-route-id="@chapter.Id">编辑</a></td>
                <td class="align-middle"><button type="submit" class="btn btn-danger delete-button" data-id="@chapter.Id">删除</button></td>
            </tr>
        }
    </tbody>
</table>