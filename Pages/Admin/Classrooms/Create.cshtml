@page
@model AlgoApp.Pages.Admin.Classrooms.CreateModel
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Classroom.ClassName" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Classroom.ClassName" class="form-control" />
            <span asp-validation-for="Classroom.ClassName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Classroom.TeacherId" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Classroom.TeacherId" class="form-control" />
            <span asp-validation-for="Classroom.TeacherId" class="text-danger"></span>
        </div>
    </div>
    <a asp-page="./Index" class="btn btn-primary">返回</a>
    <input type="submit" class="btn btn-primary" value="保存">
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
